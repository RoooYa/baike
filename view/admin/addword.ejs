<!DOCTYPE html>
<html class="fyf">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>添加文章</title>
    <link rel="stylesheet" href="/js/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/js/lib/wangEditor/css/wangEditor.css">
    <style type="text/css">
      .upimg {
        display:block;
        width:150px;
        height:150px;
        background: #eee;
        text-align: center;
        line-height: 150px;
        cursor: pointer;
      }
      .imgbd {
        position: relative;
      }
     
      #img {
        width: 150px;
        height: 150px;
        position: absolute;
        top: 0;
        left: 180px;
      }
    </style>
</head>
<body>

 <% include ./common/nav.ejs %>

<div class="panel panel-default">
  <div class="panel-body">
    <form role="form" action="/admin/word/add" method="post">
      <div class="form-group">
        <label for="exampleInputEmail1">标题</label>
        <input class="form-control" placeholder="标题" required="required" name="title">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">一级分类</label>
        <select class="form-control" id="classOne" name="classId"><option>请选择</option></select>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">二级分类</label>
        <select class="form-control" id="classTwo" name="twoClassId">
          <option>请选择</option>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">描述</label>
        <input name="describe" class="form-control" placeholder="一段话描述(可不填)">
      </div>
      <div class="form-group">
        <label>标题图片</label>
        <div class="imgbd"><label class="upimg" for="file">点击上传</label><img id="img"/></div>
        <input type="file" id="file" style="display:none">
        <p class="help-block">Example block-level help text here.</p>
      </div>
      <div class="form-group">
        <label>图片地址</label>
        <input type="text" class="form-control" required="required" name="img" placeholder="上传图片后会自动添加">
      </div>
      <div class="form-group">
        <textarea id="textarea" style="width:100%;height:300px;" required="required" name="text"></textarea>
      </div>

      <button type="submit" class="btn btn-default">添加</button>

    </form>
  </div>
</div>

<script type="text/javascript" src="/js/lib/jquery/1.11.1/jquery.js"></script>
<script type="text/javascript" src="/js/lib/wangEditor/js/wangEditor.js"></script>
<% include ../include/ft.ejs %>

<script>
require(['conf/admin/addword']);
</script>
</body>
</html>