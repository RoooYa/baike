</head>
<body>

 <% include ./common/nav.ejs %>

 <% function time(t){ %>
     <% var date = new Date(t) %>
      <%= date.toLocaleString() %>
  <% } %>
  <!-- Table -->
  <table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>标题</th>
      <th>内容</th>
      <th>标题图片</th>
      <th>一级分类</th>
      <th>二级分类</th>
      <th>来源</th>
      <th width="100">更新时间</th>
      <th>浏览次数</th>
      <th>喜欢次数</th>
      <th>描述</th>
      <th width="50">操作</th>
    </tr>
  </thead>
  <tbody>
    <% for(var i=0; i<data.length; i++) { %>
    <tr>
      <td><%= data[i].title%></td>
      <td><span class="label label-success" data-text="<%= data[i].text%>">查看</span></td>
      <td><%= data[i].img%></td>
      <td><%= data[i].classId%></td>
      <td><%= data[i].twoClassId%></td>
      <td><%= data[i].source%></td>
      <td><% time(data[i].dataTime)%></td>
      <td><%= data[i].readNumber%></td>
      <td><%= data[i].like%></td>
      <td><%= data[i].describe%></td>
      <td><a href="">修改</a> <a href="">删除</a></td>
    </tr>
    <% } %>
  </tbody>
</table>

